/*! Tile */
.ma-app-tile-wrap
    margin 20px 0
    
    .ma-app-tile
        border 1px solid #e9e9e9
        background-color #fff
        text-align center
        border-radius(8px 8px 0 0)
        
    .ma-app-tile-image
        margin 0 auto
        img 
            width 100%
            height 100%
            min-width 200px
            min-height 160px
            border-radius(8px 8px 0 0)

    .ma-app-tile-title
        padding 4px
        background #484a65
        color #fff

    .ma-app-tile-toolbar
        padding 4px