/*! Profile */
.ma-profile
    width 240px
    height 80px
    display inline-block
    
    .ma-profile-image-wrap
        width 60px
        float left
        margin 10px
        height 60px

    .ma-profile-image
        width 60px
        height 60px
    
    .ma-profile-content-wrap
        height 80px
        display table
        
    .ma-profile-content
        display table-cell
        vertical-align middle
    
    .ma-profile-name
        padding 5px
        font-weight bold
    
    .ma-profile-title
        padding 5px
