@import "node_modules/bootstrap/dist/css/bootstrap.css"
@import "public/css/lib/animate.css"
@import "public/css/lib/sample.css"


/* Base */
a:link, a:visited
    color black
    text-decoration none


/* Bootstrap extend */
.btn-file
    position relative
    overflow hidden
    
.btn-file input[type=file]
    position absolute
    top 0
    right 0
    min-width 100%
    min-height 100%
    font-size 100px
    text-align right
    opacity 0
    outline none
    background white
    cursor inherit
    display block


/* Components */
.ma-app-tile-wrap
    margin 20px 0
    
    .ma-app-tile
        border 1px solid #e9e9e9
        text-align center
        
    .ma-app-tile-image
        margin 0 auto
        
    // .ma-app-tile-toolbar
        
    .ma-app-tile-title
        background #484a65
        
        a
            color #fff
